<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bantuan"

    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="32sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mainmenu_fragment1"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih rumus bangun sesuai yang kalian inginkan,
lalu pilih selengkapnya"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="32sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/kelilingsegitiga"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Masukkan angka, lalu pilih keliling untuk menghitung keliling."
                android:textColor="@color/red"
                android:textAlignment="center"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 3"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="32sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/luassegitiga"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Masukkan angka, lalu pilih luas untuk menghitung luas"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>